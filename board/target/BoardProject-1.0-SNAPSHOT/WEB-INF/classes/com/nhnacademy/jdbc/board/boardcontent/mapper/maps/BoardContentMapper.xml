<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.nhnacademy.jdbc.board.boardcontent.mapper.BoardContentMapper">
    <update id="modifyBoardContentByUser">
        update boardContent set content=

            update JdbcStudents set name='${name}'
        where id = #{id}
    </update>
    <update id="rollBackBoardContentByAdmin"></update>
    <update id="upLike"></update>
    <update id="downLike"></update>
    <delete id="deleteBoardContentByUser"></delete>
    <delete id="deleteBoardContentByAdmin"></delete>

    <select id="getBoardContents" resultType="com.nhnacademy.jdbc.board.boardcontent.domain.BoardContent">
        select * from boardContent;
    </select>
    <select id="getBoardContentsByTitle"
            resultType="com.nhnacademy.jdbc.board.boardcontent.domain.BoardContent">
        select * from boardContent where title = #{title}
    </select>
    <select id="getBoardContentsPaging"
            resultType="com.nhnacademy.jdbc.board.boardcontent.domain.BoardContent">
        SELECT * FROM boardContent orders LIMIT 20;
    </select>
</mapper>
